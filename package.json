{
	"name": "@nerdalytics/beacon",
	"version": "1000.0.0",
	"description": "A lightweight reactive state library for Node.js backends. Enables reactive state management with automatic dependency tracking and efficient updates for server-side applications.",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/",
		"src/",
		"LICENSE"
	],
	"repository": {
		"url": "github:nerdalytics/beacon",
		"type": "git"
	},
	"scripts": {
		"test": "node --test --experimental-config-file=./node.config.json \"test/**/*.test.ts\"",
		"test:coverage": "node --test --experimental-config-file=node.config.json --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=lcov.info \"test/**/*.test.ts\"",
		"test:unit:state": "node --test --experimental-config-file=node.config.json test/state.test.ts",
		"test:unit:effect": "node --test --experimental-config-file=node.config.json test/effect.test.ts",
		"test:unit:batch": "node --test --experimental-config-file=node.config.json test/batch.test.ts",
		"test:unit:derive": "node --test --experimental-config-file=node.config.json test/derive.test.ts",
		"test:unit:select": "node --test --experimental-config-file=node.config.json test/select.test.ts",
		"test:unit:cleanup": "node --test --experimental-config-file=node.config.json test/cleanup.test.ts",
		"test:unit:cyclic-dependency": "node --test --experimental-config-file=node.config.json test/cyclic-dependency.test.ts",
		"test:unit:deep-chain": "node --test --experimental-config-file=node.config.json test/deep-chain.test.ts",
		"test:unit:infinite-loop": "node --test --experimental-config-file=node.config.json test/infinite-loop.test.ts",
		"benchmark": "node --experimental-config-file=node.config.json scripts/benchmark.ts",
		"update-performance-docs": "node --experimental-config-file=node.config.json scripts/update-performance-docs.ts",
		"format": "biome format --write .",
		"prebuild": "rm -rf dist/",
		"build": "npm run build:lts",
		"build:lts": "tsc -p tsconfig.lts.json",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"reactive",
		"signals",
		"state-management",
		"nodejs",
		"typescript",
		"reactive-programming",
		"dependency-tracking",
		"esm",
		"observable",
		"backend",
		"server-side",
		"computed-values",
		"effects",
		"batching"
	],
	"author": "Denny Trebbin",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.14.0",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
